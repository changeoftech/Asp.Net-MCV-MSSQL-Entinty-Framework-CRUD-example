                @Html.EditorFor(model => model.GOREVI)
                @Html.ValidationMessageFor(model => model.GOREVI)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.IS_BASLANGIC_TARIH)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.IS_BASLANGIC_TARIH)
